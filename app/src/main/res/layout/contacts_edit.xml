<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.ContactsEdit"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_rename"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@android:color/black"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/listContacts2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_rename"
         />


    <Button
        android:id="@+id/ADD"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:text="ADD"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/EDIT"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="516dp" />

    <Button
        android:id="@+id/REMOVE"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:text="REMOVE"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="516dp" />

    <Button
        android:id="@+id/EDIT"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:text="EDIT"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/REMOVE"
        android:layout_marginRight="38dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="516dp" />

</android.support.constraint.ConstraintLayout>
